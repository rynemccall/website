---
layout: base.njk
---
{{ content | safe }}

{% set previousPost = collections.post | getPreviousCollectionItem(page) %}
{% set nextPost = collections.post | getNextCollectionItem(page) %}

<nav>
  <ul>
    {% if previousPost %}
      <li>Previous post: <a href="{{ previousPost.url }}">{{ previousPost.data.title }}</a></li>
    {% endif %}
    {% if nextPost %}
      <li>Next post: <a href="{{ nextPost.url }}">{{ nextPost.data.title }}</a></li>
    {% endif %}
  </ul>
</nav>
